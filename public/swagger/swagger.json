{
    "openapi": "3.0.0",
    "info": {
        "title": "MouTonDoList API",
        "version": "1.0"
    },
    "paths": {
        "/api/categories/{id}": {
            "delete": {
                "description": "Deletes a category",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Category id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Category successfully deleted"
                    },
                    "404": {
                        "description": "Given category not found"
                    },
                    "403": {
                        "description": "User has not the write permission of parent category."
                    }
                }
            }
        },
        "/api/invitations": {
            "post": {
                "requestBody": {
                    "description": "Invitation object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCategory"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Creates an invitation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserCategory"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Invitation already exists"
                    },
                    "404": {
                        "description": "Given category or user not found"
                    },
                    "400": {
                        "description": "Given arguments not passed trough validator."
                    },
                    "500": {
                        "description": "Repository (database) error"
                    },
                    "403": {
                        "description": "User should be the owner of the category to create an invitation"
                    }
                }
            }
        },
        "/api/invitations/{id}": {
            "delete": {
                "description": "Deletes an invitation",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Invitation id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Deletes an invitation"
                    },
                    "404": {
                        "description": "Given category or user not found"
                    },
                    "403": {
                        "description": "User should be the owner of the category or the invitation to delete it."
                    }
                }
            }
        },
        "/api/comments/{id}": {
            "delete": {
                "description": "Deletes a comment",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Comment id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Deletes an comment"
                    },
                    "404": {
                        "description": "Given comment not found"
                    },
                    "403": {
                        "description": "User has not the write permission of parent category."
                    }
                }
            }
        },
        "/api/tasks/{id}": {
            "delete": {
                "description": "Deletes a task",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Task id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Deletes an task"
                    },
                    "404": {
                        "description": "Given category or task not found"
                    },
                    "403": {
                        "description": "User has not the write permission of parent category."
                    }
                }
            }
        },
        "/api/users/{id}": {
            "delete": {
                "description": "Deletes an user",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Deletes an user"
                    },
                    "404": {
                        "description": "Given user not found"
                    },
                    "403": {
                        "description": "Permission denied (forbidden)"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserCategory": {
                "title": "UserCategory",
                "properties": {
                    "id": {
                        "type": "integer",
                        "nullable": true
                    },
                    "user_id": {
                        "type": "integer"
                    },
                    "category_id": {
                        "type": "integer"
                    },
                    "accepted": {
                        "type": "boolean"
                    },
                    "canEdit": {
                        "type": "boolean"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "Header Token": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header"
            }
        }
    }
}