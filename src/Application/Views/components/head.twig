<script type="text/javascript">
    $(document).ready(() => {
        $.ajaxPrefilter(function (options, originalOptions, jqXHR) {
            let allowedMethod = ["post", "put", "delete"];

            if (allowedMethod.includes(options.type.toLowerCase())) {
                let newData = options.data
                if(!newData) newData = {};

                newData['{{ csrf.keys.name }}'] = '{{ csrf.name }}'
                newData['{{ csrf.keys.value }}'] = '{{ csrf.value}}'

                options.data = JSON.stringify(newData)
                console.log(options)
            }
        });
    });
</script>
