<div class="container d-flex flex-column align-items-center mt-5 p-4">
    <h1 class="text-center mb-4">{% trans %}FormLogInTitle{% endtrans %}</h1>
    <form action="{{ url_for('account.login') }}" method="POST" id="form_login" class="form-account" >
        {{ csrf.html | raw }}
        <div class="mb-3">
            <label for="email" class="form-label">{% trans %}FormEmail{% endtrans %}</label>
            {% if has_error('email') %}
                <input type="email" id="email" name="email" aria-describedby="validationEmail"
                       class="form-control is-invalid bg-secondary" value="{{ val('email') }}">
            {% else %}
            <input type="email" id="email" name="email" class="form-control bg-secondary" value="{{ val('email') }}">
            {% endif %}
            <div id="validationEmail" class="invalid-feedback">
                {{ error('email') }}
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">{% trans %}FormPwd{% endtrans %}</label>
            {% if has_error('password') %}
                <input type="password" id="password" name="password" aria-describedby="validationPassword"
                       class="form-control is-invalid bg-secondary">
                <div id="validationPassword" class="invalid-feedback">
                    {{ error('password') }}
                </div>
            {% else %}
                <input type="password" id="password" name="password" class="form-control bg-secondary">
            {% endif %}
        </div>
        <div class="mb-3 form-check d-flex justify-content-center">
            <input type="checkbox" class="form-check-input bg-secondary me-2" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">{% trans %}FormLetConnect{% endtrans %}</label>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-account">{% trans %}FormSubmit{% endtrans %}</button>
        </div>
    </form>
</div>


<script>
    const listTranslations = [`{{ 'RegexEmpty'|trans|raw }}`,`{{ 'RegexEmail'|trans|raw }}`,`{{ 'RegexPass'|trans|raw }}`,
        `{{ 'RegexPassConf'|trans|raw }}`];

    function setInvalid(element)
    {
        let input = document.getElementById(element)
        if(input == null) return
        input.classList.add("is-invalid");
    }

    function displayError(div,index,size) {
        $('#validation-'+div).html(listTranslations[index] + size);
        setInvalid(div);
    }

    $(document).ready(() => {
        {% if has_error('email') %}displayError('email',1,"254");{% endif %}
        {% if has_error('pseudo') %}displayError('pseudo',0,"64");{% endif %}
        {% if has_error('password') %}displayError('password',2,"128");{% endif %}
        {% if has_error('password-conf') %}displayError('password-conf',3,"");{% endif %}
    })
</script>