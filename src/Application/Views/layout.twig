<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>MoutonTodoList</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="{{ ROOT_URL }}assets/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="{{ ROOT_URL }}assets/css/global.css" >
    <link rel="stylesheet" href="{{ ROOT_URL }}assets/css/layout.css">
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/@mdi/font@6.9.96/css/materialdesignicons.min.css">


    {% block stylesheets %}
    {% endblock %}
    {% block javascripts %}
    {% endblock %}

</head>
<body class="light">
{% include 'components/navbar.twig' %}

<h1>{% trans %}AppName{% endtrans %}</h1>

<div class="container-fluid">
    <div class="row">
        <nav class="col-2 sidebar collapse-horizontal">
            {% include 'components/vertical-navbar.twig' %}
        </nav>

        <div class="col">
            {% include 'components/todolist.twig' %}
            {% block content %}
            {% endblock %}
        </div>

    </div>
</div>
</body>
</html>