<div class="accordion accordion-flush categories">

    <div class="category-title">
        <h3 id="title" onclick="openModalCategory({{ category.id }})">{{ category.name }}</h3>
        <div class="title-actions">
            <a data-id="{{ category.id }}" tabindex="0" class="btn btn-category-actions" role="button" data-bs-popover="category-popover" aria-label="Ouvre une liste d'actions pour une catÃ©gorie">
                <span class="mdi mdi-24px mdi-dots-horizontal"></span>
            </a>
        </div>
    </div>

    {% if (default) %}

        {% include 'pages/components/sub-category/content.twig' with { 'subCatId' : 0 , 'default' : true } %}

    {% else %}

        {% for subCatId in 0..2 %}
            {% include 'pages/components/sub-category/content.twig' with { 'subCatId' : subCatId } %}
        {% endfor %}

        {% for subCatId in 3..3 %}
            {% include 'pages/components/sub-category/archive.twig' with { 'subCatId' : subCatId } %}
        {% endfor %}

    {% endif %}

</div>