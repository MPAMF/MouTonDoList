<div class="accordion accordion-flush categories">

    <div class="category-title">
        <h3 id="title" onclick="openEditModalCategory({{ category.category.id }})">{{ category.category.name }}</h3>
        <div class="title-actions">
            <a data-id="{{ category.category.id }}" tabindex="0" class="btn btn-category-actions" role="button" data-bs="popover" aria-label="Ouvre une liste d'actions pour une catégorie"
                {% if (canEdit) and (category.category.archived) %}
                    data-bs-popover="category-archive-popover">
                {% elseif (canEdit) %}
                    data-bs-popover="category-popover">
                {% else %}
                    data-bs-popover="category-shared-readonly-popover">
                {% endif %}
                <span class="mdi mdi-24px mdi-dots-horizontal"></span>
            </a>
        </div>
    </div>

    <div id="research" class="research" hidden>
        <p class="mb-4 form-text text-muted">Résultat de la recherche :</p>
        <ul class="list-group list-group-flush tasks list-research"></ul>
    </div>

    <div id="default-category-content" data-sortable="categories">
        {% for subCategory in category.category.subCategories %}
            {% if subCategory.archived %}
                {% include 'pages/components/sub-category/archive.twig' with { 'subCategory' : subCategory, 'tasks' : subCategory.tasks } %}
            {% else %}
                {% include 'pages/components/sub-category/content.twig' with { 'subCategory' : subCategory, 'tasks' : subCategory.tasks } %}
            {% endif %}
        {% endfor %}
    </div>

</div>