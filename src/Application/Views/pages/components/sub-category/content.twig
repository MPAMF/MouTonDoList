<div class="accordion-item accordion-item-tasks" data-idSubCat="{{ subCategory.id }}">
    <h2 class="accordion-header subcategory-header" id="panelsStayOpen-heading-{{ subCategory.id }}">
        {% if (canEdit and isArchived == false) %}
            <span class="category-button">
                <span class="accordion-button btn-subcategory-drag">
                    <button class="btn btn-category-actions" type="button" title="{% trans %}SubCategoryDragTitle{% endtrans %}">
                        <span class="mdi mdi-24px mdi-drag"></span>
                    </button>
                </span>
            </span>
        {% endif %}
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse-{{ subCategory.id }}" aria-expanded="true" aria-controls="panelsStayOpen-collapse-{{ subCategory.id }}">
                {{ subCategory.name }}
        </button>
        {% if (canEdit and isArchived == false) %}
            <span class="category-button">
                <span class="accordion-button">
                    <a data-subcategory-id="{{ subCategory.id }}" tabindex="0" class="btn btn-category-actions" role="button" data-bs="popover" data-bs-popover="subcategory-popover" aria-label="{{ 'SubCategoryPopoverAriaLabel'|trans|raw }}">
                        <span class="mdi mdi-24px mdi-dots-horizontal"></span>
                    </a>
                </span>
            </span>
        {% endif %}
    </h2>
    <div id="panelsStayOpen-collapse-{{ subCategory.id }}" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-heading-{{ subCategory.id }}">
        <div class="accordion-body">
            <ul class="list-group list-group-flush tasks" data-sortable="tasks" data-subcategory-list-id="{{ subCategory.id }}">
                {% for task in tasks %}
                    {% include 'pages/components/task/content.twig' with { 'task' : task, 'isArchived' : isArchived } %}
                {% endfor %}
            </ul>
            {% if (canEdit and isArchived == false) %}
                <ul>
                    {% include 'pages/components/task/new.twig' with { 'subCatId' : subCategory.id } %}
                </ul>
            {% endif %}
        </div>
    </div>
</div>