<div class="d-grid">
    <button class="btn btn-addtask" type="button">
        <span data-feather="plus" class="align-text-bottom"></span>
        + Ajouter une tâche
    </button>
</div>
</br>
<form class="task-new">
    <div class="mb-2">
        <input type="text" class="form-control form-control-sm" placeholder="Nom de la tâche" required>
    </div>
