<li class="list-group-item task-add">
    <div class="d-grid">
        <button class="btn btn-task-add" type="button">
            <span class="mdi mdi-plus-circle"></span>
            Ajouter une tâche
        </button>
    </div>
    <form class="task-new">
        <div class="mb-2">
            <input type="text" class="form-control form-control-sm" placeholder="Nom de la tâche" required>
        </div>
        <div class="mb-2">
            <textarea class="form-control form-control-sm" rows="3" placeholder="Description"></textarea>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button class="btn btn-secondary btn-sm me-md-2" type="button">Annuler</button>
            <button class="btn btn-primary btn-sm btn-task-create" type="submit" disabled>Ajouter une tâche</button>
        </div>
    </form>
</li>