<li class="list-group-item task-view">
    <span class="mdi mdi-drag btn-task-drag"></span>
    <div class="form-check task-view-details">
        <input class="form-check-input" type="checkbox" value="">
        <div class="task-view-info" id="taskViewInfo-{{ catId }}-{{ taskId }}" data-bs-toggle="modal" data-bs-target="#taskModal-{{ catId }}-{{ taskId }}">
            <label class="form-check-label">
                Nom de la t√¢che [{{ catId }}-{{ taskId }}]
            </label>
            <small class="form-text text-muted">Description</small>
        </div>
    </div>
    <button class="btn btn-secondary btn-sm btn-task-actions" type="button" id="taskModalBtn-{{ catId }}-{{ taskId }}" data-bs-toggle="modal" data-bs-target="#taskModal-{{ catId }}-{{ taskId }}">
        <span class="mdi mdi-dots-horizontal"></span>
    </button>

    {% include 'tasks/task-edit.twig' with { 'catId' : catId, 'taskId': taskId } %}
</li>

<script type="text/javascript">
    function taskToggleModal() {
        $("#taskModal-{{ catId }}-{{ taskId }}").modal();
    }
    document.getElementById("taskModalBtn-{{ catId }}-{{ taskId }}").addEventListener('click', taskToggleModal);
    document.getElementById("taskViewInfo-{{ catId }}-{{ taskId }}").addEventListener('click', taskToggleModal);
</script>